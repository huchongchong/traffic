<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aiseminar.platerecognizer.activity.MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/radioGroupID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/color_white"
                >

                <RadioButton
                    android:id="@+id/GroupID1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="事故"
                    />
                <RadioButton
                    android:id="@+id/GroupID2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拥堵"/>

                <RadioButton
                    android:id="@+id/GroupID3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设施损坏"
                    />
                <RadioButton
                    android:id="@+id/GroupID4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="信号灯异常"/>
                <RadioButton
                    android:id="@+id/GroupID5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入原因"
                    />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@color/color_white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >
                    <ImageView
                        android:id="@+id/pic1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@mipmap/camera_nor"
                        android:scaleType="centerInside"
                        android:clickable="true"
                        android:padding="1dp"
                        android:background="@drawable/bg_image"
                        android:layout_marginRight="10dp"
                        />
                    <ImageView
                        android:id="@+id/pic2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:padding="1dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/camera_nor"
                        android:clickable="true"
                        android:background="@drawable/bg_image"
                        android:layout_marginRight="10dp"
                        />
                    <ImageView
                        android:id="@+id/pic3"
                        android:padding="1dp"
                        android:scaleType="centerInside"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@mipmap/camera_nor"
                        android:clickable="true"
                        android:background="@drawable/bg_image"
                        />
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="地点"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/commit"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/logbtntext"
                android:text="提交"
                android:textSize="22sp"
                android:layout_marginBottom="60dp"
                android:textColor="@color/color_white"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
